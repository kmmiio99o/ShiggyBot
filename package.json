{
  "name": "shiggybot",
  "version": "0.1.0",
  "description": "A lightweight, extensible Discord bot scaffold in TypeScript â€” easy to deploy, add commands, and extend.",
  "author": "kmmiio99o",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kmmiio99o/ShiggyBot.git"
  },
  "bugs": {
    "url": "https://github.com/kmmiio99o/ShiggyBot/issues"
  },
  "homepage": "https://github.com/kmmiio99o/ShiggyBot#readme",
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=18",
    "bun": ">=1"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "node ./scripts/dev.mjs",
    "build": "rimraf dist && bun build src/index.ts --outfile dist/index.js --minify --bundle --target bun",
    "start": "node ./scripts/start.mjs",
    "dev:bun": "bun --watch src/index.ts",
    "install:bun": "bun install",
    "build:bun": "rimraf dist && bun build src/index.ts --outfile dist/index.js --minify --bundle --target bun",
    "start:bun": "bun ./dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "clean": "rimraf dist .turbo",
    "docs": "node ./scripts/generate-readme.js || true"
  },
  "dependencies": {
    "@types/node": "^24.10.0",
    "discord.js": "^14.24.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "discord",
    "discord-bot",
    "typescript",
    "bot",
    "scaffold",
    "cloud"
  ]
}
